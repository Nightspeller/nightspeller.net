<!DOCTYPE html>
<html ng-csp>
<head>
    <meta charset="utf-8" />
    <title>StreamViewer</title>

    <!-- WinJS references -->
    <link href="streamviewer/WinJS/css/ui-dark.css" rel="stylesheet" />
    <script src="streamviewer/WinJS/js/base.js"></script>
    <script src="streamviewer/WinJS/js/ui.js"></script>

    <style type="text/css">
        @charset "UTF-8";

        [ng-cloak], [data-ng-cloak], [x-ng-cloak],
        .ng-cloak, .x-ng-cloak, .ng-hide:not(.ng-animate) {
            display: none !important;
        }
    </style>

    <!-- StreamViewer references -->
    <link href="streamviewer/css/default.css" rel="stylesheet" />
    <link href="streamviewer/css/newStreams.css" rel="stylesheet">
    <link href="streamviewer/css/streamOverview.css" rel="stylesheet">
    <link href="streamviewer/css/mainScreen.css" rel="stylesheet">
    <link href="streamviewer/css/chat.css" rel="stylesheet">
    <link href="streamviewer/css/picker.css" rel="stylesheet">
    <link href="streamviewer/css/controls.css" rel="stylesheet">
    <link href="streamviewer/css/video-player.css" rel="stylesheet">

    <script type="text/javascript" src="streamviewer/js/vendor/angular.min.js"></script>

    <script src="streamviewer/js/config.js"></script>
    <script src="streamviewer/js/default.js"></script>

    <script type="text/javascript" src="streamviewer/js/services/StreamsStateManager.js"></script>
    <script type="text/javascript" src="streamviewer/js/services/PickerService.js"></script>
    <script type="text/javascript" src="streamviewer/js/services/TwitchAPIService.js"></script>
    <script type="text/javascript" src="streamviewer/js/services/ChatService.js"></script>

    <script type="text/javascript" src="streamviewer/js/directives/streamOverview.js"></script>
    <script type="text/javascript" src="streamviewer/js/directives/mainScreen.js"></script>
    <script type="text/javascript" src="streamviewer/js/directives/chat.js"></script>
    <script type="text/javascript" src="streamviewer/js/directives/picker.js"></script>
    <script type="text/javascript" src="streamviewer/js/directives/controls.js"></script>
    <script type="text/javascript" src="streamviewer/js/directives/videoPlayer.js"></script>

    <script type="text/javascript" src="streamviewer/js/controllers/AppController.js"></script>
</head>
<body class="win-type-body" ng-controller="AppController" ng-keypress="keyPressed($event)">
    <div class="flexContainer">
        <nav class="streamOverviewList" ng-show="StreamsStateManager.showStreamOverviewList">
            <nobr>
                <stream-overview num="0"></stream-overview>
                <stream-overview num="1"></stream-overview>
            </nobr>
            <nobr>
                <stream-overview num="2"></stream-overview>
                <stream-overview num="3"></stream-overview>
            </nobr>
        </nav>
        <section class="mainAndChat">
            <div class="mainScreenSection">
                <controls></controls>
                <main-screen></main-screen>
            </div>
            <div class="chatSection" ng-show="StreamsStateManager.showChat">
                <chat></chat>
            </div>
        </section>
    </div>
    <picker></picker>
</body>
</html>